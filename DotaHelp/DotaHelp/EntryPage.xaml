                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Hero Damage: " VerticalOptions="End" WidthRequest="100" TextColor="White" FontSize="16"/>
                    <Entry x:Name="heroDamage" WidthRequest="100" TextColor="White"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Building Damage: " VerticalOptions="End" WidthRequest="100" TextColor="White" FontSize="16"/>
                    <Entry x:Name="buildingDamage" WidthRequest="100" TextColor="White"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="GPM: " VerticalOptions="End" WidthRequest="100" TextColor="White" FontSize="16"/>
                    <Entry x:Name="gpm" WidthRequest="100" TextColor="White"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="XPM: " VerticalOptions="End" WidthRequest="100" TextColor="White" FontSize="16"/>
                    <Entry x:Name="xpm" WidthRequest="100" TextColor="White"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Healing Done: " VerticalOptions="End" WidthRequest="100" TextColor="White" FontSize="16"/>
                    <Entry x:Name="healing" WidthRequest="100" TextColor="White"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Support Contribution: " VerticalOptions="End" WidthRequest="100" TextColor="White" FontSize="16"/>
                    <Entry x:Name="support" WidthRequest="100" TextColor="White"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Stacks: " VerticalOptions="End" WidthRequest="100" TextColor="White" FontSize="16"/>
                    <Entry x:Name="stacks" WidthRequest="100" TextColor="White"/>
                </StackLayout>
                <Button Text="Submit" x:Name="submit" Clicked="submit_Clicked" VerticalOptions="EndAndExpand" BackgroundColor="#BA4A00" TextColor="White" CornerRadius="8" Margin="0,10,0,10"/>
                <Button Text="Submit From MatchID" x:Name="submitMatchId" Clicked="submitMatchId_Clicked" VerticalOptions="EndAndExpand" BackgroundColor="#BA4A00" TextColor="White" CornerRadius="8" Margin="0,0,0,10"/>
